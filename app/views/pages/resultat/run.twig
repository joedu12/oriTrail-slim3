{% extends "layout.twig" %}

{% block content %}
<h1>Résultats n°{{resultat.id_resultat}} de {{ resultat.course.nom }}</h1>

<p>Courreur : {{ resultat.user.prenom }} {{ resultat.user.nom }}</p>
<p>Sexe : {{ resultat.user.sexe }}</p>
<p>Âge : {{ resultat.user.dateNaissance | age }}</p>
<p>Score : {{ resultat.score }}</p>
<p>Date de début : {{ resultat.debut }}</p>
<p>Date de fin : {{ resultat.fin }}</p>
<p>Delta : {{ resultat.debut | date_diff(resultat.fin) }}</p>

{% if balises is not empty %}
<div class="table-responsive">
	<table class="table table-hover">
			<thead>
					<tr>
						<th>Numéro</th>
						<th>Nom</th>
						<th>Temps intermédiaire</th>
						<th>Valeur</th>
					</tr>
			</thead>
			<tbody>
					{% for row in balises %}
					<tr>
						<td>{{ row.balisesCourse.numero }}</td>
						<td>{{ row.balisesCourse.nom }}</td>
						<td>{{ row.tempsInter }}</td>
						<td>{{ row.balisesCourse.valeur }}</td>
					</tr>
					{% endfor %}
			</tbody>
	</table>
</div>
{% else %}
<p>Aucune balise n'est enregistrée sur ce résultat de course.</p>
{% endif %}

{% endblock %}
